<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Indicator_Type</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISNULL(Indicator_Catalogue__c)),  TEXT(Indicator_Type__c) != TEXT(Indicator_Catalogue__r.Indicator_Type__c))</errorConditionFormula>
    <errorDisplayField>Indicator_Type__c</errorDisplayField>
    <errorMessage>Indicator Type must be the same as the one on the related Indicator Catalogue</errorMessage>
</ValidationRule>
