<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Total_Overdue__c</fullName>
    <description>The total amount of payments outstanding at this moment of time (total scheduled amounts to date minus total paid to date)</description>
    <externalId>false</externalId>
    <formula>if(Total_Due__c - Total_Paid__c- Total_Amount_Written_Off1__c&lt;0,0,Total_Due__c - Total_Paid__c - Total_Amount_Written_Off1__c)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Total Overdue</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
