<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Negative_Percent_of_Disbursement_Amount</fullName>
    <active>true</active>
    <errorConditionFormula>AND(!$Setup.Validation_Settings__c.Disable_Validation_Rules_on_Investment__c, Percent_of_Disbursement_Amount__c &lt; 0)</errorConditionFormula>
    <errorDisplayField>Percent_of_Disbursement_Amount__c</errorDisplayField>
    <errorMessage>Negative values not allowed (% of Disbursement Amount)</errorMessage>
</ValidationRule>
