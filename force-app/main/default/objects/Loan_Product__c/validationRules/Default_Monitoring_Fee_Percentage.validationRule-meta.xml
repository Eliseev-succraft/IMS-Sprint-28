<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Default_Monitoring_Fee_Percentage</fullName>
    <active>true</active>
    <errorConditionFormula>AND(!$Setup.Validation_Settings__c.Disable_Validation_Rules_on_Loan_Product__c, OR(Default_Monitoring_Fee_Percentage__c &lt; Minimum_Monitoring_Fee_Percentage__c, Default_Monitoring_Fee_Percentage__c &gt; Maximum_Monitoring_Fee_Percentage__c))</errorConditionFormula>
    <errorDisplayField>Default_Monitoring_Fee_Percentage__c</errorDisplayField>
    <errorMessage>The default value must be greater than the minimum value and less than the maximum value (Default Monitoring Fee Percentage)</errorMessage>
</ValidationRule>
