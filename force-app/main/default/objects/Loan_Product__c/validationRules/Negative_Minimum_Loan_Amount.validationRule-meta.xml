<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Negative_Minimum_Loan_Amount</fullName>
    <active>true</active>
    <errorConditionFormula>AND(!$Setup.Validation_Settings__c.Disable_Validation_Rules_on_Loan_Product__c, Minimum_Loan_Amount__c &lt; 0)</errorConditionFormula>
    <errorDisplayField>Minimum_Loan_Amount__c</errorDisplayField>
    <errorMessage>Negative values not allowed (Minimum Loan Amount)</errorMessage>
</ValidationRule>
