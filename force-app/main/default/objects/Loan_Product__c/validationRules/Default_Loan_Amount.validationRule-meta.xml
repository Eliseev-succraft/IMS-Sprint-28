<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Default_Loan_Amount</fullName>
    <active>true</active>
    <errorConditionFormula>AND(!$Setup.Validation_Settings__c.Disable_Validation_Rules_on_Loan_Product__c, OR(Default_Loan_Amount__c &lt; Minimum_Loan_Amount__c, Default_Loan_Amount__c &gt; Maximum_Loan_Amount__c))</errorConditionFormula>
    <errorDisplayField>Default_Loan_Amount__c</errorDisplayField>
    <errorMessage>The default value must be greater than the minimum value and less than the maximum value (Default Loan Amount)</errorMessage>
</ValidationRule>
