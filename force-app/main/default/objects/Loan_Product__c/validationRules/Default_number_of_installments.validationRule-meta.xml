<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Default_number_of_installments</fullName>
    <active>true</active>
    <errorConditionFormula>AND(!$Setup.Validation_Settings__c.Disable_Validation_Rules_on_Loan_Product__c, OR(Default_number_of_installments__c &lt; Minimum_number_of_installments__c, Default_number_of_installments__c &gt; Maximum_number_of_installments__c))</errorConditionFormula>
    <errorDisplayField>Default_number_of_installments__c</errorDisplayField>
    <errorMessage>The default value must be greater than the minimum value and less than the maximum value (Default Number of Instalments)</errorMessage>
</ValidationRule>
