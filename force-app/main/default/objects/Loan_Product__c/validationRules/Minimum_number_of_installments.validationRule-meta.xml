<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Minimum_number_of_installments</fullName>
    <active>true</active>
    <errorConditionFormula>AND(!$Setup.Validation_Settings__c.Disable_Validation_Rules_on_Loan_Product__c, Minimum_number_of_installments__c &gt; Maximum_number_of_installments__c)</errorConditionFormula>
    <errorDisplayField>Minimum_number_of_installments__c</errorDisplayField>
    <errorMessage>The minimum value must not be greater than the maximum value (Minimum Number of Instalments)</errorMessage>
</ValidationRule>
