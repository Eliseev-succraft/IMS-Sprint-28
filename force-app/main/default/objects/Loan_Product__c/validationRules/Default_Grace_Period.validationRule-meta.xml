<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Default_Grace_Period</fullName>
    <active>true</active>
    <errorConditionFormula>AND(!$Setup.Validation_Settings__c.Disable_Validation_Rules_on_Loan_Product__c, OR(Default_Grace_Period__c &lt; Minimum_Grace_Period__c, Default_Grace_Period__c &gt; Maximum_Grace_Period__c))</errorConditionFormula>
    <errorDisplayField>Default_Grace_Period__c</errorDisplayField>
    <errorMessage>The default value must be greater than the minimum value and less than the maximum value (Default Grace Period)</errorMessage>
</ValidationRule>
