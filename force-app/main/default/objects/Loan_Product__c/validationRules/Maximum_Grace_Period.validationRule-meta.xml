<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Maximum_Grace_Period</fullName>
    <active>true</active>
    <errorConditionFormula>AND(!$Setup.Validation_Settings__c.Disable_Validation_Rules_on_Loan_Product__c, Maximum_Grace_Period__c &lt; Minimum_Grace_Period__c)</errorConditionFormula>
    <errorDisplayField>Maximum_Grace_Period__c</errorDisplayField>
    <errorMessage>The maximum value must not be less than the minimum value (Maximum Grace Period)</errorMessage>
</ValidationRule>
